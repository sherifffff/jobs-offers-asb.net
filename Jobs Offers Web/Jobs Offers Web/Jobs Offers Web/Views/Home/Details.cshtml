@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تفاصيل الوظيفة</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <!-- كود عرض الصورة بدل من عرض مسارها فقط -->
        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model=>Model.JobImage)"
                 class="thumbnail"
                 style="width:128px; height:128px;" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("التقدم إلي هذه الوظيفة", "Apply", new { id = Model.ID},new { @class="btn btn-success"}) |
    @Html.ActionLink("العوده إلي القائمة", "Index", new { @class = "btn btn-default" })
</p>
